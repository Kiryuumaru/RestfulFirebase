<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Company>Kiryuumaru</Company>
    <Authors>Kiryuumaru</Authors>
    <Description>Firebase REST API wrapper wired with MVVM observables.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Kiryuumaru</Copyright>
    <PackageProjectUrl>https://github.com/Kiryuumaru/RestfulFirebase</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Kiryuumaru/RestfulFirebase</RepositoryUrl>
    <PackageTags>Firebase REST API, Authentication, Realtime Database, Storage, MVVM Observable</PackageTags>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageLicenseFile>LICENCE.md</PackageLicenseFile>
    <Version>1.3.29</Version>
    <PackageReleaseNotes>* Bug fixes</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENCE.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Auth\FirebaseAuthApp.cs~RF20cd8c7.TMP" />
    <None Remove="Auth\Session.cs~RF1a3d10e8.TMP" />
    <None Remove="Database\Models\FirebasePropertyDictionary.cs~RF13ba79b1.TMP" />
    <None Remove="Database\Realtime\RealtimeWire.cs~RF123265c.TMP" />
    <None Remove="Database\Realtime\RealtimeWire.cs~RFf20d81e.TMP" />
    <None Remove="Database\Streaming\NodeStreamer.cs~RF674bce4.TMP" />
    <None Remove="Http\DefaultHttpStreamFactory.cs~RFcdef18d.TMP" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="ObservableHelpers" Version="1.4.5" />
  </ItemGroup>

</Project>
